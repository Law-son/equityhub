<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- App Theme -->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your app's general theme here -->
    </style>

    <!-- Custom Theme for SearchView -->
    <style name="SearchViewTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="RoundedDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/dialog_background</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogButton</item>
    </style>

    <style name="DialogButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#6750A4</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
